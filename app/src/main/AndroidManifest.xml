<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recepiesfinder">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_logo1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_logo1"
        android:supportsRtl="true"
        android:theme="@style/MyStyle">

        <activity android:name=".Recipe" />
        <activity android:name=".Help" />
        <activity android:name=".AlphabetForIngredients" />
        <activity android:name=".AlphabetForRecepies" />
        <activity android:name=".AllRecipes" />
        <activity android:name=".FindIngredient" />
        <activity android:name=".Settings" />
        <activity android:name=".DisplayListOfDishesActivity" />
        <activity android:name=".ListOfSelectedIngredients" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>