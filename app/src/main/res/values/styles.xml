<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyStyle" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#43a047</item>
        <item name="colorPrimaryVariant">@color/my_colorPrimaryVariant</item>
        <item name="colorSecondary">@color/my_colorSecondary</item>
        <item name="colorSecondaryVariant">@color/my_colorSecondaryVariant</item>
        <item name="colorPrimaryDark">@color/textPrimaryColor</item>
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="shapeAppearanceSmallComponent">@style/myShapeTest</item>
        <item name="colorOnSurface">#0D7019</item>
        <item name="colorControlActivated">#0D7019</item>
        <item name="android:textViewStyle">@style/my_textViewStyle1</item>
        <!--
        <item name="android:textColorPrimary">@color/my_textColorPrimary</item>
        <item name="android:windowBackground">@color/my_colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>-->
    </style>

    <style name="my_textViewStyle1" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textPrimaryColor</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="myShapeTest" parent = "ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomLeft">cut</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>
    </style>


    <style name="AppTheme.PopMe">

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>

    </style>

    <style name="MyStyle2" parent="Theme.MaterialComponents.Light">

        <item name="colorPrimary">@color/textPrimaryColor</item>
        <item name="colorPrimaryDark">@color/textPrimaryColor</item>
        <item name="android:textColorPrimary">@color/my_textColorPrimary</item>
        <item name="colorSecondary">#0097a7</item>
        <item name="shapeAppearanceSmallComponent">@style/myShapeTest</item>
        <item name="android:colorBackground">@color/my_background</item>
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="colorOnSurface">#0097a7</item>
        <item name="colorControlActivated">#0097a7</item>
        <item name="android:itemTextAppearance">@style/MyAct</item>


        <item name="android:textViewStyle">@style/my_textViewStyle</item>

    </style>

    <style name="MyAct">
        <item name="android:textColor">@color/textPrimaryColor</item>
    </style>

    <style name="my_textViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/my_textColorPrimary</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#0097a7</item>
    </style>

</resources>
